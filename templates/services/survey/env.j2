#########################################################################
#
# File: .env
#
# Site:      {{ service }}
# Tool:      {{ allVars.dojo.tool }}
# Version:   {{ allVars.dojo.version }}
# Creation:  {{ fileCreation }}
#
#########################################################################

COMPOSE_PROJECT_NAME={{ allVars.dojo.id | lower }}
PROJECT_DOMAIN={{ allVars.dojo.domain }}
SERVERNAME=${PROJECT_DOMAIN}

### DATABASE ############################################################

# Remember this to fill your installation form in a clean installation
MYSQL_ROOT_PASSWORD={{ vault.general.MYSQL_ROOT_PASSWORD | default('limePwd.298') }}
MYSQL_USER={{ allVars.database.user | default('lime') }}
MYSQL_PASSWORD={{ vault.general.MYSQL_PASSWORD | default('limePwd.298') }}
MYSQL_DATABASE={{ allVars.database.name | default('lime') }}

### LIMESURVEY ##########################################################
LIMESURVEY_DB_HOST={{ allVars.database.host | default('db') }}
LIMESURVEY_DB_USER={{ allVars.database.user | default('lime') }}
LIMESURVEY_DB_PASSWORD={{ vault.general.MYSQL_PASSWORD | default('limePwd.298') }}
LIMESURVEY_DB_NAME={{ allVars.database.name | default('lime') }}
LIMESURVEY_TABLE_PREFIX={{ allVars.database.prefix | default('lime_') }}
LIMESURVEY_USE_INNODB=1
LIMESURVEY_USE_DB_SESSIONS=""

### Admin config -------------------------------------------------------
LIMESURVEY_ADMIN_USER="admin"
LIMESURVEY_ADMIN_PASSWORD={{ allVars.app.passwd | default('limePwd.298') }}
LIMESURVEY_ADMIN_NAME="Survey Administrator"
LIMESURVEY_ADMIN_EMAIL={{ allVars.app.mail.default | default('marc.bria@uab.cat') }}


### Mail stuff ---------------------------------------------------------
LIMESURVEY_SMTP_HOST={{ allVars.app.mail.smtp_host }}:{{ allVars.app.mail.smtp_port}}
LIMESURVEY_SMTP_USER={{ allVars.app.mail.smtp_user }}
LIMESURVEY_SMTP_PASSWORD={{ allVars.app.mail.smtp_password }}
LIMESURVEY_SMTP_SSL={{ allVars.app.mail.smtp_ssl }}
LIMESURVEY_FROM_EMAIL={{ allVars.app.mail.smtp_from }}

### Debug --------------------------------------------------------------
LIMESURVEY_DEBUG=0
LIMESURVEY_SQL_DEBUG=0
